<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.DatePicker?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projectpbo.DashboardUserController" style="-fx-padding: 10;">
    <BorderPane maxWidth="800" prefWidth="800" style="-fx-border-color: #CCCCCC; -fx-border-width: 1;">
        <!-- Header -->
        <top>
            <VBox alignment="CENTER" style="-fx-background-color: #FF5722; -fx-padding: 10;">
                <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="PEMINJAMAN BUKU PERPUSTAKAAN" />
                <TextField fx:id="searchField" promptText="Cari buku..." style="-fx-padding: 5; -fx-max-width: 400px;" />
            </VBox>
        </top>

        <!-- Main Content -->
        <center>
            <VBox spacing="20" style="-fx-padding: 20;">
                <!-- Kategori -->
                <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="KATEGORI" />
                <TilePane alignment="TOP_CENTER" hgap="20" vgap="20" style="-fx-padding: 10;">
                    <children>
                        <!-- Fiksi -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@/resources/fiction.jpg" />
                                </image>
                            </ImageView>
                            <Label style="-fx-font-size: 14px;" text="Fiksi" />
                            <Button text="Lihat Buku" fx:id="fictionButton" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
                        </VBox>
                        
                        <!-- Sains -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@/resources/science.jpg" />
                                </image>
                            </ImageView>
                            <Label style="-fx-font-size: 14px;" text="Sains" />
                            <Button text="Lihat Buku" fx:id="scienceButton" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
                        </VBox>
                        
                        <!-- Teknologi -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@/resources/technology.jpg" />
                                </image>
                            </ImageView>
                            <Label style="-fx-font-size: 14px;" text="Teknologi" />
                            <Button text="Lihat Buku" fx:id="technologyButton" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
                        </VBox>
                        
                        <!-- Sejarah -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@/resources/history.jpg" />
                                </image>
                            </ImageView>
                            <Label style="-fx-font-size: 14px;" text="Sejarah" />
                            <Button text="Lihat Buku" fx:id="historyButton" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
                        </VBox>
                        
                        <!-- Seni -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@/resources/art.jpg" />
                                </image>
                            </ImageView>
                            <Label style="-fx-font-size: 14px;" text="Seni" />
                            <Button text="Lihat Buku" fx:id="artButton" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
                        </VBox>
                        
                        <!-- Bisnis -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #CCCCCC; -fx-border-width: 1;">
                            <ImageView fitHeight="80" fitWidth="80">
                                <image>
                                    <Image url="@/resources/business.jpg" />
                                </image>
                            </ImageView>
                            <Label style="-fx-font-size: 14px;" text="Bisnis" />
                            <Button text="Lihat Buku" fx:id="businessButton" style="-fx-background-color: #FF5722; -fx-text-fill: white;" />
                        </VBox>
                    </children>
                </TilePane>
            </VBox>
        </center>

        <!-- Footer -->
        <bottom>
            <HBox alignment="CENTER" style="-fx-background-color: #FF5722; -fx-padding: 10;">
                <Label style="-fx-font-size: 12px; -fx-text-fill: white;" text="Perpustakaan XYZ Â© 2024" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
